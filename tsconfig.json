{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@medical/*": ["public/js/medical/*"],
      "@types/*": ["types/*"],
      "@api/*": ["ailydian-from-github/api/*"],
      "@services/*": ["ailydian-from-github/services/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": false,
    "incremental": true
  },
  "include": [
    "public/js/medical/**/*",
    "ailydian-from-github/api/**/*",
    "ailydian-from-github/services/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.backup.*",
    "**/*-BACKUP-*"
  ]
}
